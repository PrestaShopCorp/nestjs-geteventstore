{
  "name": "nestjs-geteventstore",
  "version": "5.0.6",
  "description": "Event Store connector for NestJS-Cqrs",
  "author": "Vincent Vermersch <vincent.vermersch@prestashop.com >",
  "contributors": [
    "vinceveve",
    "jdharandas",
    "monocursive",
    "xGouley",
    "jokesterfr",
    "MaxencePerrinPrestashop",
    "prxmat",
    "maniolias"
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "files": [
    "index.*",
    "dist/**/*",
    "*.md"
  ],
  "keywords": [
    "nestjs",
    "eventstore"
  ],
  "repository": "git@github.com:PrestaShopCorp/nestjs-eventstore.git",
  "publishConfig": {
    "access": "public"
  },
  "bugs": "https://github.com/prestashopCorp/nestjs-eventstore/issues",
  "scripts": {
    "start:dev": "tsc -w",
    "prebuild": "rimraf dist/",
    "build": "tsc",
    "prepare": "npm run build && husky install",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint .",
    "check-lite": "npm run lint:fix && npm run prepare",
    "test": "jest",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@eventstore/db-client": "^2.1.1",
    "lodash": "^4.17.21",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "@nestjs/common": "*",
    "@nestjs/core": "*",
    "@nestjs/cqrs": "*",
    "@nestjs/terminus": "*",
    "class-transformer": "*",
    "class-validator": "*"
  },
  "peerDependenciesMeta": {
    "@nesjs/cqrs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/cqrs": "^7.0.1",
    "@nestjs/platform-express": "^7.6.11",
    "@nestjs/terminus": "^7.1.2",
    "@nestjs/testing": "^7.6.11",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.9",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cli-color": "^2.0.1",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-local": "^1.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.2.0",
    "nestjs-context": "^0.13.2",
    "nestjs-pino-stackdriver": "^2.2.1",
    "prettier": "^2.5.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "pretty-quick": "^3.1.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.2",
    "supertest": "6.2.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.spec.json"
      }
    },
    "globalSetup": "./jest.setup.ts",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "./src/**/*.{ts}": [
      "eslint . --fix",
      "git add"
    ],
    "examples/src/**/*.{ts}": [
      "eslint . --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn pretty-quick --staged && yarn jest --forceExit"
    }
  }
}
