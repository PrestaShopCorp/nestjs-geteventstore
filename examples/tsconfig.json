{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "useDefineForClassFields": true,
    "target": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "composite": false,
    "paths": {
      "@nestjs-geteventstore/*": ["../src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
